<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainGlobal"
    android:background="#2A2A2A">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_layout"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Главная"
            android:textColor="#000"
            android:textSize="48sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_weight="0.25"
            android:backgroundTint="#00D5EBD5"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <Space
            android:layout_width="match_parent"
            android:layout_height="100sp"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#FFFFFF"
            android:text="Запросов за сегодня:"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Для волонтёра"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Принятых заявок:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />
        <Button
            android:id="@+id/volunteer_task"
            android:layout_gravity="center"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/green_button"
            android:background="@drawable/rounded_button"
            android:text="Принятые заявки"
            android:textSize="20sp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Для заказчика"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Невыполненных заявок:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />
        <Button
            android:id="@+id/zak_tasks"
            android:layout_gravity="center"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/green_button"
            android:background="@drawable/rounded_button"
            android:text="Ваши заявки"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>